{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "indent": ["error", 2, {"SwitchCase": 1}],  // Força a identação de 2 espaços
    "semi": ["error", "always"],  // Força o uso de ponto e vírgula
    "no-tabs": ["error"],  // Desabilita o uso de tabs para identação
    "curly": ["error", "all"]  // Força chaves em todos os blocos de controle
  }
}
